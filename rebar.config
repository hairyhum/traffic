{deps_dir, ["deps"]}.
{plugins, [rebar_ct]}.
{erl_opts, [debug_info, fail_on_warning, {parse_transform, lager_transform}]}.
{deps,
  [
    {lager, ".*", {git, "https://github.com/basho/lager.git"}},
    {cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {tag, "1.0.0"}}},
    {jsonx, ".*", {git, "https://github.com/hairyhum/jsonx.git", {branch, "special_chars"}}},
    {poolboy, ".*", {git, "https://github.com/devinus/poolboy.git"}},
    {uuid, ".*", {git, "https://github.com/afiskon/erlang-uuid-v4.git"}}
  ]}.
